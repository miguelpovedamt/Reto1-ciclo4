<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bog"
    tools:context=".sucursales">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="@color/white"

            >

            <TextView
                android:id="@+id/textSuc1"

                android:layout_width="0dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"

                android:autoSizeTextType="uniform"
                android:text="Modelia"
                android:textAlignment="center"
                android:textColor="#313d8c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSuc2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Calle 73 #11c - 89"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textSuc3"

                android:layout_width="0dp"
                android:layout_marginStart="50dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Cedritos"
                android:textAlignment="center"
                android:textColor="#313d8c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSuc4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Calle 21 # 5d - 19"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textSuc5"

                android:layout_width="0dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Villa Luz"
                android:textAlignment="center"
                android:textColor="#313d8c"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSuc6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="Calle 64 # 125 - 7"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/btnContacto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_span="1"
                android:layout_weight="1"
                android:text="ContÃ¡ctenos" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>